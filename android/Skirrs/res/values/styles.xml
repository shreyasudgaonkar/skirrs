<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="SkirrsTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:windowBackground">@drawable/geometry_bk_texture</item>
        <item name="android:textColorPrimary">@color/skirrs_text_color</item>
        <item name="android:textSize">20sp</item>
        
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="SkirrsButton"  parent="android:style/Widget.Button">

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/skirrs_button_blue</item>
        <item name="android:height">36dp</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:padding">4dip</item>
	    <item name="android:gravity">center</item>
        
    </style>
    
    <style name="SkirrsEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:layout_marginTop">@dimen/activity_element_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="SkirrsDivider" parent="@android:style/Theme.Holo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/skirrs_divider_color</item>
    </style>
    
    <style name="SkirrsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/skirrs_action_bar_bg_color</item>    
    </style>
    
    <style name="SkirrsDateAndTimeButton" parent="@android:style/Holo.SegmentedButton">
        <item name="android:textColor">@color/skirrs_button_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="SkirrsCalendarView" parent="android:Widget.CalendarView">
    <item name="android:focusedMonthDateColor">@color/skirrs_divider_color</item>
    <item name="android:weekNumberColor">@color/skirrs_textview_text_color</item>
    <item name="android:weekDayTextAppearance">?android:attr/textAppearanceMedium</item>
    <item name="android:dateTextAppearance">?android:attr/textAppearanceMedium</item>
</style>
    
</resources>
