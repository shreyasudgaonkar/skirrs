<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubmitRide" >

    <ScrollView
        android:id="@+id/submit_ride_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >

            <AutoCompleteTextView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/com.skirrs.source"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:singleLine="true" 
                android:background="@null"/>
            
            <!-- Horizontal divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"/>

            <AutoCompleteTextView
                android:layout_marginTop="16dp"
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/com.skirrs.destination"
                android:inputType="textPostalAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@null" />
            
            <!-- Horizontal divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"/>

            
            <DatePicker 
                android:id="@+id/date"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            <!-- Horizontal divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"/>
            
            <TimePicker 
                android:id="@+id/time"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            <!-- Horizontal divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="42dp">
                
                <!-- Horizontal divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"
                    android:layout_alignParentTop="true"/>
                
                <!-- Vertical divider between sign-in and register buttons -->
                <View
                    android:id="@+id/submitCancelDivider"
                    android:layout_width="2dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="4dip"
                    android:background="@color/skirrs_divider_color" 
                    android:layout_centerHorizontal="true"/>
                
                <Button
                    android:id="@+id/submit_ride_button"
                     android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/com.skirrs.submit_ride" 
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/submitCancelDivider"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                
                 <Button 
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/com.skirrs.cancel"
                    android:onClick="cancelActivity"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/submitCancelDivider"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />
                 
                  <!-- Horizontal divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginRight="4dip"
                    android:background="@color/skirrs_divider_color"
                    android:layout_alignParentBottom="true"/>
                
                <!--  Rightmost vertical divider -->
                <View
                    android:layout_width="2dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="4dip"
                    android:background="@color/skirrs_divider_color" 
                    android:layout_alignParentRight="true"/>
                
                <!--  Leftmost vertical divider -->
                <View
                    android:layout_width="2dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="4dip"
                    android:background="@color/skirrs_divider_color" 
                    android:layout_alignParentLeft="true"/>
    
             </RelativeLayout>
            
        </LinearLayout>
        
    </ScrollView>

</merge>
